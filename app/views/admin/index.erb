<html>
  <head>
    <title>Administration</title>
    <link rel="stylesheet" href="/assets/application.css">
    <script src="/assets/application.js"></script>
  </head>
  <body>
    <section class="main">
      <section class="admin">
        <h2>Administration</h2>
        <div class="doted"></div>
        <section class="perfumery">
          <article class="header">
            <h3>Parfumerie</h3>
          </article>
            <article class="row product">
              <% @news.each do |news| %>
                <div class="span4">
                  <div class="preview">
                    <h6><%= news.category %></h6>
                    <p class="name"><%= news.title %></p>
                    <img src="<%= news.image.url %>" />
                    <p class="description"><%= news.description %></p><br/>
                  </div>
                  <div class="form">
                    <form action="/admin/news/<%= news.id %>" method="post" enctype="multipart/form-data">
                      <p>Categorie :</p>
                      <input id="category" name="new[category]" type="text" value="<%= news.category %>" /><br />
                      <p>Titre :</p>
                      <input id="title" name="new[title]" type="text" value="<%= news.title %>" /><br />
                      <p>Image :</p>
                      <input id="image" name="new[image]" type="file" /><br />
                      <p>Description :</p>
                      <textarea id="description" name="new[description]" rows="8" cols="40"><%= news.description %></textarea><br /><hr />
                      <input type="submit" value="Mettre à jour" class="submit" />
                    </form>
                  </div>
                </div>
              <% end %>
          </article>
        </section>

        <div class="doted"></div>

        <section class="events">
          <article class="header">
            <h3>Evenements</h3>
            <form action="/admin/events" method="post">
              <input type="submit" value="Nouvel événements" class="new_event" />
            </form>
          </article>
          <section class="sortable">
            <% @events.each do |event| %>
              <article class="agenda" data-event-id="<%= event.id %>">
                <form action="/admin/events/<%= event.id %>" method="post">
                  <div style="margin:0;padding:0">
                    <input name="_method" type="hidden" value="delete" />
                  </div>
                </form>
                <table class="table">
                  <tbody>
                    <tr>
                      <td class="date"><%= event.date %></td>
                      <td class="logo"><img src="<%= event.logo.url %>"/></td>
                      <td class="description"><%= event.description %></td>
                      <td class="action"><button type="button" class="edit">éditer</button><input type="submit" value="Supprimer" /></td>
                    </tr>
                  </tbody>
                </table>
                <form action="/admin/events/<%= event.id %>" method="post" enctype="multipart/form-data" style="display: none;" class="edit-form">
                  <textarea id="date" name="event[date]" rows="5"><%= event.date %></textarea>
                  <input id="logo" name="event[logo]" type="file" />
                  <input id="description" name="event[description]" type="text" value="<%= event.description %>" />
                  <input type="submit" value="Mettre à jour" />
                </form>
              </article>
            <% end %>
          </section>
        </section>

      </section>
    </section>
  </body>
</html>

